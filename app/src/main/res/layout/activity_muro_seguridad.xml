<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedorPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Muro_Seguridad"
    android:background="@color/fondo_seccion_oscuro">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/layoutCabecera"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/fondo_seccion_oscuro"
      android:padding="16dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgPerfilUsuario"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="2dp"
        android:src="@tools:sample/avatars"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
        app:strokeColor="@color/mascota_naranja"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnNotificaciones"
        app:layout_constraintStart_toEndOf="@id/imgPerfilUsuario"
        app:layout_constraintTop_toTopOf="parent">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Muro de Seguridad"
          android:textColor="@color/blanco"
          android:textSize="17sp"
          android:textStyle="bold" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Barrio seguro"
          android:textColor="@color/gris_slate_400"
          android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnNotificaciones"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_notifications"
        app:tint="@color/blanco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:clipToPadding="false"
      android:fillViewport="true"
      app:layout_constraintTop_toBottomOf="@id/layoutCabecera"
      app:layout_constraintBottom_toTopOf="@id/contenedorBarraInferior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/cardCrearPublicacion"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          app:cardBackgroundColor="@color/fondo_tarjeta_oscuro"
          app:cardCornerRadius="16dp"
          app:cardElevation="0dp"
          app:strokeColor="@color/borde_oscuro"
          app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@tools:sample/avatars"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

            <TextView
                android:id="@+id/tvPromptReporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Reportar actividad sospechosa..."
                android:textColor="@color/gris_slate_500"
                android:textSize="14sp" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_camara"
                app:tint="@color/gris_slate_500" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_microfono"
                app:tint="@color/gris_slate_500" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_ubicacion"
                app:tint="@color/gris_slate_500" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPublicar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="@color/primario"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Publicar"
                android:textAllCaps="false"
                android:textColor="@color/blanco"
                app:cornerRadius="20dp" />
          </LinearLayout>
        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>

      <HorizontalScrollView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:paddingHorizontal="16dp"
          android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <com.google.android.material.card.MaterialCardView
              android:id="@+id/chipFiltroTodo"
              android:layout_width="wrap_content"
              android:layout_height="32dp"
              app:cardBackgroundColor="@color/primario"
              app:cardCornerRadius="100dp"
              app:cardElevation="0dp"
              app:strokeWidth="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:text="Todo"
                android:textColor="@color/blanco"
                android:textStyle="bold" />
          </com.google.android.material.card.MaterialCardView>

          <com.google.android.material.card.MaterialCardView
              android:id="@+id/chipFiltroSospechoso"
              android:layout_width="wrap_content"
              android:layout_height="32dp"
              android:layout_marginStart="8dp"
              app:cardBackgroundColor="@color/fondo_boton_oscuro"
              app:cardCornerRadius="100dp"
              app:cardElevation="0dp"
              app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

              <ImageView
                  android:layout_width="16dp"
                  android:layout_height="16dp"
                  android:src="@drawable/ic_warning"
                  app:tint="@color/alerta_rojo" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="6dp"
                  android:text="Sospechoso"
                  android:textColor="@color/blanco" />
            </LinearLayout>
          </com.google.android.material.card.MaterialCardView>

          <com.google.android.material.card.MaterialCardView
              android:id="@+id/chipFiltroConsejo"
              android:layout_width="wrap_content"
              android:layout_height="32dp"
              android:layout_marginStart="8dp"
              app:cardBackgroundColor="@color/fondo_boton_oscuro"
              app:cardCornerRadius="100dp"
              app:cardElevation="0dp"
              app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

              <ImageView
                  android:layout_width="16dp"
                  android:layout_height="16dp"
                  android:src="@drawable/ic_shield"
                  app:tint="@color/seguridad_verde" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="6dp"
                  android:text="Consejo de seguridad"
                  android:textColor="@color/blanco" />
            </LinearLayout>
          </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
      </HorizontalScrollView>

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvFeedPublicaciones"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:nestedScrollingEnabled="false"
          tools:itemCount="3"
          tools:listitem="@layout/item_post" />

    </LinearLayout>
  </androidx.core.widget.NestedScrollView>

  <androidx.coordinatorlayout.widget.CoordinatorLayout
      android:id="@+id/contenedorBarraInferior"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/barraNavegacion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/fondo_tarjeta_oscuro"
        app:fabAlignmentMode="center"
        app:fabCradleMargin="8dp"
        app:fabCradleRoundedCornerRadius="24dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/navBtnInicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

          <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:src="@drawable/ic_home"
              app:tint="@color/primario" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Inicio"
              android:textColor="@color/primario"
              android:textSize="10sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/navBtnPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

          <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:src="@drawable/ic_person"
              app:tint="@color/gris_slate_500" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Perfil"
              android:textColor="@color/gris_slate_500"
              android:textSize="10sp" />
        </LinearLayout>
      </LinearLayout>
    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:src="@drawable/ic_sos"
        app:backgroundTint="@color/emergencia_sos"
        app:borderWidth="0dp"
        app:layout_anchor="@id/barraNavegacion"
        app:maxImageSize="32dp"
        app:tint="@color/blanco" />

  </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>